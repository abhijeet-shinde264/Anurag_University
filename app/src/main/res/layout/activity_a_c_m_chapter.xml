<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ACM_chapter"
    android:background="#A823A7D8">

    <LinearLayout
        android:id="@+id/lin_layout_acm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_margin="8sp"
            android:src="@drawable/acm_logo"/>
        <Button
            android:id="@+id/acm_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>




        <TextView
            android:id="@+id/acm_about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/acm_about"
            android:textSize="25sp"
            android:textAlignment="gravity"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginBottom="8sp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/acm_eve_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <ImageView
            android:id="@+id/acm_eve_1"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/eve_1_acm"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/acm_eve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workshop was conducted on Angular JS by members of the Web Club. Students learned about different aspects of web development."
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/acm_eve_2"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/eve_2_acm"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/acm_eve_2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workshop was conducted on Angular JS by Mr. Jaya Kumar Vatikutti. Students learned about Angular JS and their use in web projects."
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>



        <Button
            android:id="@+id/acm_achieve_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <ImageView
            android:id="@+id/acm_achieve_1"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/achieve_1_acm"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/acm_achieve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our ACM students Deepak Kumar Yadav, Praveena S.L. Kakarlapudi, Vikaram Boddupalli published an article “Oculus Rift and Hollywood” in ACM Computers in Entertainment Journal in October,2014."
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/acm_team_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <TextView
            android:id="@+id/acm_team_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mrs T Veda Reddy,Assistant Proffessor,Facilitator\n\nManikanta - Chair\n\nV Supriya - Vice Chair\n\nDale Vaibhavi - Secretary\n\nAditya Neelakantam - Web Developer\n\nAmulya Parankusham - Treasurer"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>

</ScrollView>