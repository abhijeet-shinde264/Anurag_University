<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ISTE_chapter"
    android:background="#A823A7D8">

    <LinearLayout
        android:id="@+id/lin_layout_iste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_margin="8sp"
            android:src="@drawable/iste_logo"/>
        <Button
            android:id="@+id/iste_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>




        <TextView
            android:id="@+id/iste_about_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/iste_about"
            android:textSize="25sp"
            android:textAlignment="gravity"
            android:textStyle="normal"
            android:layout_marginLeft="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginBottom="8sp"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:visibility="gone"/>

        <Button
            android:id="@+id/iste_eve_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <ImageView
            android:id="@+id/iste_eve_1"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/eve_1_iste"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/iste_eve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workshop on Ethical Hacking"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iste_eve_2"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/eve_2_iste"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/iste_eve_2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Talk on Spirituality and Humanity"
            android:textSize="30sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/iste_achieve_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <ImageView
            android:id="@+id/iste_achieve_1"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:src="@drawable/achieve_1_iste"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/iste_achieve_1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total 120 students including other college students participated out of which 6 teams selected for final IIT bombay from which 3 teams are from our college students. Vasavi Team, Bharath Nandan Reddy Team and CH.Sreepooja Team has been awarded with the Merit Certificates for an Outstanding performance in Prelims rounds of IOT Challenge 2019 conducted by IIT Bombay, stands as a testimonial to the activities of the chapter."
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iste_achieve_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/achieve_2_iste"
            android:layout_marginTop="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/iste_achieve_2_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently, a student member of the AGI ISTE studentchapter, Ms. Shravanthi S has been awarded with the best Computer Science student award of 2013 at the National level, stands as a testimonial to the activities of the chapter."
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
            android:layout_marginLeft="8sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/iste_team_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team"
            android:textSize="30sp"
            android:layout_margin="8sp"
            android:background="#ffffff"
            android:textColor="#ff005d"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>

        <TextView
            android:id="@+id/iste_team_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R.Sai Yashwanth - President\n\nP.Preethi Sri - Vice-President\n\nN.Vasavi Sai - Secretary"
            android:textSize="20sp"
            android:layout_marginBottom="5sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:visibility="gone"/>





    </LinearLayout>

</ScrollView>